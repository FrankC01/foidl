; Simple Runtime Tests

module runtimetests

include langcorem

; Function: exception
; Description: Writes exception with except_str and exits

func exception [except_str]
    failWith:
        format:
            "Exception: {}. exiting...`n"
            [except_str]

func testEarlyUsePredicates []
    printnl!: ""
    printnl!: "Test early use predicates"

    ; Empty tests
    ?: empty?: ""
        printnl!: "String is empty"
        exception "empty? should have return true"

func main [argv]
    printnl!: "Welcome to runtime tests"

    ; Call test functions
    testEarlyUsePredicates: []

    printnl!: ""
