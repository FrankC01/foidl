module http_chan

include curl_http

func rwhttp [url]
    let chan [] opens!: {chan_target url chan_type chan_http chan_mode open_r chan_render render_string}
    let rds  [] reads!: chan
    printnl!: "Results of read " printnl!: rds
    printnl!: "Results of write "
    let wrts [] writes!: chan "Field=1&Field=2&Field=3"
    printnl!: response_value: wrts
    closes!: chan
    response_value: rds

func main [argv]
    init_curl_http:
    rwhttp: "http://example.com"
    zero

