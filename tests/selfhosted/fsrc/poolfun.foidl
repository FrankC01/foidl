; Easy introductions to thread pools

module poolfun

func onearg[arg]
    print!: format: "In one arg with {}`n" [arg]
    "one"

func pump_work [pt targ]
    queue_work!: pt task!: onearg [targ]

func main [argv]
    let pt [] pool!:
    fold: pump_work pt [12 10 5 6 8 99 "foo"]
    reads!: cin
    0

